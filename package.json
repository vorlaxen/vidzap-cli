{
  "name": "vidzap-cli",
  "version": "0.1.0",
  "description": "The ultimate YouTube video downloader with sleek CLI experience",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "vidzap": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node-esm src/index.ts",
    "dev": "nodemon --watch src --ext ts --exec \"ts-node-esm src/index.ts\"",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest --coverage",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@distube/ytdl-core": "^4.16.10",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "axios": "^1.11.0",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^11.0.0",
    "figlet": "^1.8.2",
    "fluent-ffmpeg": "^2.1.3",
    "gradient-string": "^3.0.0",
    "inquirer": "^12.9.2",
    "ora": "^7.1.1",
    "nodemon": "^2.0.22"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/figlet": "^1.7.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.42.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": ["youtube", "cli", "video", "downloader", "vidzap"],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vidzap-cli.git"
  },
  "license": "MIT"
}
